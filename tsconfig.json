{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true, // Fix default import issues
    "allowSyntheticDefaultImports": true, // More forgiving default imports
    "strict": true // Enforce strict typing
  },
  "include": ["src/**/*", "types/**/*.d.ts"], // Include types
  "exclude": ["node_modules"]
}
